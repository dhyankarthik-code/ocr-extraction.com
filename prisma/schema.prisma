// Prisma Schema for Infy Galaxy User Management
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  googleId      String    @unique
  email         String    @unique
  name          String?
  picture       String?
  // Quota Tracking (Lifetime)
  usagebytes    Int       @default(0)
  
  // Location Tracking (from IP)
  country       String?
  city          String?
  region        String?
  lastLoginIp   String?
  lastLoginAt   DateTime?
  
  @@index([email])
  @@index([googleId])
}
