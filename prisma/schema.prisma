// Prisma Schema for Infy Galaxy User Management
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  googleId      String    @unique
  email         String    @unique
  name          String?
  picture       String?
  // Quota Tracking (Lifetime)
  usageMB       Float     @default(0.0)
  
  // Location Tracking (from IP)
  country       String?
  city          String?
  region        String?
  lastLoginIp   String?
  systemIp      String?
  lastLoginAt   DateTime?
  
  // Quota Management
  timezone      String?     // For local time calculation
  lastUsageDate DateTime?   // Track last usage day (in local time)
  
  // Privacy & Terms Consent
  acceptedTerms Boolean   @default(false)
  acceptedAt    DateTime?

  @@index([email])
  @@index([googleId])
}

model ChatConversation {
  id          String        @id @default(cuid())
  sessionId   String        @unique
  userEmail   String?
  startedAt   DateTime      @default(now())
  endedAt     DateTime?
  summary     String?
  emailSent   Boolean       @default(false)
  messages    ChatMessage[]
}

model ChatMessage {
  id             String           @id @default(cuid())
  conversationId String
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String
  content        String
  createdAt      DateTime         @default(now())

  @@index([conversationId])
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  country   String
  mobile    String
  message   String
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

model Visitor {
  id            String   @id @default(cuid())
  email         String?
  ipAddress     String?  @unique
  country       String?
  city          String?
  region        String?
  timezone      String?
  userAgent     String?
  usageMB       Float    @default(0.0)
  lastUsageDate DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Tool Usage Counters
  usageOCR          Int @default(0)
  usageImageToPdf   Int @default(0)
  usagePdfToImage   Int @default(0)
  usagePdfToText    Int @default(0)
  usageTextToPdf    Int @default(0)
  usagePdfToExcel   Int @default(0)
  usageExcelToPdf   Int @default(0)
  usagePdfToPpt     Int @default(0)
  usagePptToPdf     Int @default(0)
  
  // Relations
  visitLogs         VisitLog[]

  @@index([email])
  @@index([ipAddress])
  @@index([createdAt])
}



// Blog Interactions
model BlogPost {
  id        String   @id @default(cuid())
  slug      String   @unique
  viewCount Int      @default(0)
  likes     BlogLike[]
  comments  BlogComment[]
  
  updatedAt DateTime @updatedAt
}

model BlogLike {
  id        String   @id @default(cuid())
  postSlug  String
  post      BlogPost @relation(fields: [postSlug], references: [slug])
  sessionId String   // IP or Session ID
  createdAt DateTime @default(now())

  @@unique([postSlug, sessionId])
  @@index([postSlug])
}

model BlogComment {
  id        String   @id @default(cuid())
  postSlug  String
  post      BlogPost @relation(fields: [postSlug], references: [slug])
  name      String?
  email     String?
  content   String
  approved  Boolean  @default(true) // Auto-approve for now, or false if moderation needed
  createdAt DateTime @default(now())
  
  @@index([postSlug])
  @@index([createdAt])
}

model VisitLog {
  id        String   @id @default(cuid())
  ipAddress String?
  
  country   String?
  city      String?
  region    String?
  
  userAgent String?
  path      String   // The page visited
  referrer  String?
  
  createdAt DateTime @default(now())
  
  // Link to aggregated Visitor (Optional)
  visitorId String?
  visitor   Visitor? @relation(fields: [visitorId], references: [id])

  @@index([createdAt])
  @@index([ipAddress])
}
